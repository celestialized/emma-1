<%= form_with(model: home_info, local: true) do |form| %>
  <% if home_info.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(home_info.errors.count, "error") %> prohibited this home_info from being saved:</h2>

      <ul>
      <% home_info.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :biography_blurb %>
    <%= form.text_area :biography_blurb, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :video_billboard_url %>
    <%= form.text_area :video_billboard_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :watch_this_video_url %>
    <%= form.text_area :watch_this_video_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :site_id %>
    <%= form.text_field :site_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if home_info.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', home_info, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if home_info.persisted? %>
      <%= link_to "Cancel", home_info, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", home_infos_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
