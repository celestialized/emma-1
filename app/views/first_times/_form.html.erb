<%= form_with(model: first_time, local: true) do |form| %>
  <% if first_time.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(first_time.errors.count, "error") %> prohibited this first_time from being saved:</h2>

      <ul>
      <% first_time.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :blurb %>
    <%= form.text_field :blurb, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :twitter_handle %>
    <%= form.text_field :twitter_handle, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :featured_image_src %>
    <%= form.text_area :featured_image_src, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :featured_youtube_video_url %>
    <%= form.text_area :featured_youtube_video_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if first_time.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', first_time, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if first_time.persisted? %>
      <%= link_to "Cancel", first_time, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", first_times_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
