


<div class="row">
  <div class="col-sm-6">
    <h1>First_times</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_first_time_path, class: 'btn btn-primary' do %>
    Add New First time
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>First name</th>
            <th>Last name</th>
            <th>Blurb</th>
            <th>Twitter handle</th>
            <th>Featured image src</th>
            <th>Featured youtube video url</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @first_times.each do |first_time| %>
        <%= content_tag :tr, id: dom_id(first_time), class: dom_class(first_time) do %>
          

                      <td><%= first_time.first_name %></td>
                      <td><%= first_time.last_name %></td>
                      <td><%= first_time.blurb %></td>
                      <td><%= first_time.twitter_handle %></td>
                      <td><%= first_time.featured_image_src %></td>
                      <td><%= first_time.featured_youtube_video_url %></td>
          
          
            <td><%= link_to 'Show', first_time %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
