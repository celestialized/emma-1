<div class="page-header">
  <%= link_to blog_articles_path, class: 'btn btn-default' do %>
    All Blog_articles
  <% end %>
  <%= link_to edit_blog_article_path(@blog_article), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Blog article: <%= @blog_article.title %></h1>
  <h4><%= link_to 'Parent Entry', blog_entry_path(@blog_article.entry), target: "_blank" %> </h4>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @blog_article.title %></dd>

  <dt>Pinned Value:</dt>
  <dd><%= @blog_article.pinned_value %></dd>

  <dt>Body:</dt>
  <dd><%= @blog_article.body %></dd>

  <dt>Byline:</dt>
  <dd><%= @blog_article.user.name.full %></dd>

</dl>
