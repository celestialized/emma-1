    <script type="text/javascript">

      function revealSomething(data_permalink, data_title, data_handle){       
        const overlay = document.querySelector('#ct-mobile-share')
        const shareModal = document.querySelector('.social-container')

        if (navigator.share) {
            navigator.share({
                title: data_title,
                url: data_permalink,
            })
            .then(() => {
                console.log('Thanks for sharing!');
            })
            .catch(console.error);
        } else {
                overlay.classList.add('show-share')
                shareModal.classList.add('show-share')
            // alert("data-permlink:"+data_permalink+", \n data-title:"+data_title+", data-handle:"+data_handle);
            

        }


      }

