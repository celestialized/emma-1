  <style>
    /* The brightest duotone color */
    .darken::before {
      background-color: rgba(30, 255, 188, 1);
    }

    /* The darkest duotone color */
    .lighten::after {
      background-color: rgba(0, 15, 170, 1);
    }

    /* Hero background images */
    #hero-1 {
      width: 100vw;
      height: 67vh;
      <% 
      if image_filename.to_s.length == 0
        image_filename = "https://via.placeholder.com/1425x356?text=Billboard+Poster"
      end
      %>
      background: url(<%= image_url(image_filename) %>) no-repeat center center fixed; 
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }

    /* Duotone effect */
    .duotone {
      width: 100vw;
      height: 67vh;
      overflow: hidden;
      position: relative;
      display: inline-block;
      background-size: cover;
      background-position: 50% 50%;
      background-repeat: no-repeat;
      background-attachment: fixed;
      box-shadow: inset 0 0 0 0 rgba(255,255,255, 1);
      transform: scale(1);
      transition: all .5s ease-in-out;
    }

    .duotone::before, .duotone::after {
      content: '';
      width: inherit;
      height: inherit;
      position: absolute;
      box-shadow: inset 0 0 0 0 rgba(255,255,255, 1);
      transition: all .5s ease-in-out;
    }

    .duotone::before {
      mix-blend-mode: multiply;
    }

    .duotone::after {
      mix-blend-mode: lighten;
    }


  </style>

