<div class="backstage">


<%= render '/backstage/sidebar' %>

    <section id="main-dashboard-content">
      <section id="top-section">
        <h1>Backstage::MerchandiseLinks <%= "(#{@merchandise_links.count})" %></h1>
        <%= link_to 'new', 
            new_backstage_media_appearance_path, 
            class: "btn btn-primary" %>
      </section>
      <section class="flexgrid">
        <% @merchandise_links.each do |link| %>
          <div class="item">
            <p >Book:  
                <%= link_to link.book.title, edit_backstage_merchandise_link_path(link.id) %>
            </p>
            <p >
              Seller:
              <%= link_to link.seller_name, link.url, target: "_blank" %>
            </p>
          </div>
        
        <% end %>
              

      </section>
    </section>

</div>

<%# 
seller_name: string, url: text, book_id: integer
 %>