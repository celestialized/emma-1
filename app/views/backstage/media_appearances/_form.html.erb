    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :published_on %>
    <%= form.date_select :published_on, class: 'form-control' %>
  </div>

  <div class="form-group">
    <div class="form-group" data-uppy="media_appearance[image]">
      <%= form.label :image %>
      <div>
        <% if media_appearance.image.attached? %>
          <%= image_tag media_appearance.image, width: 280, data: { behavior: 'uppy-preview' } %>
        <% else %>
          <img src="" width="280" data-behavior="uppy-preview" />
        <% end %>
      </div>
      <%= link_to "Upload", "#", data: { behavior: "uppy-trigger" } %>
    </div>
  
  </div>

