


<div class="row">
  <div class="col-sm-6">
    <h1>Leads</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_lead_path, class: 'btn btn-primary' do %>
    Add New Lead
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Phone</th>
            <th>Email address</th>
            <th>Subject</th>
            <th>Message body</th>
            
      </tr>
    </thead>

    <tbody>
      <% @leads.each do |lead| %>
        <%= content_tag :tr, id: dom_id(lead), class: dom_class(lead) do %>
          
            <td><%= link_to lead.name, lead %></td>
          

                      <td><%= lead.phone %></td>
                      <td><%= lead.email_address %></td>
                      <td><%= lead.subject %></td>
                      <td><%= lead.message_body %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
